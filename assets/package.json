{
  "name": "arrow",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "lint": "eslint -c .eslintrc.js --ext ts,tsx,js ./src ./tests --fix",
    "lint:check": "eslint -c .eslintrc.js --ext ts,tsx,js ./src ./tests",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "tsc --noEmit && npm run lint:check && npm run format:check"
  },
  "dependencies": {
    "@fullcalendar/daygrid": "^6.1.0",
    "@fullcalendar/react": "^6.1.0",
    "leaflet": "^1.9.4",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "phoenix_live_react": "file:../deps/phoenix_live_react",
    "phoenix_live_view": "file:../deps/phoenix_live_view",
    "live_select": "file:../deps/live_select",
    "react": "^18.3.0",
    "react-datepicker": "^6.2.0",
    "react-dom": "^18.3.0",
    "react-leaflet": "^4.2.1",
    "react-phoenix": "file:../deps/react_phoenix",
    "react-select": "^5.8.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/leaflet": "^1.9.12",
    "@types/phoenix": "^1.6.5",
    "@types/phoenix_live_view": "^0.18.5",
    "@types/react": "^18.3.0",
    "@types/react-datepicker": "^6.2.0",
    "@types/react-select": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.1",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "customExportConditions": []
    },
    "clearMocks": true,
    "transform": {
      "^.+\\.(j|t)sx?$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.test.json"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@fullcalendar|@react-leaflet|react-leaflet)).+"
    ],
    "testRegex": "(src|tests)/.*\\.test\\.tsx?$",
    "modulePaths": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "ts",
      "tsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "collectCoverage": true
  }
}
